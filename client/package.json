{
    "name": "client",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "npm run lint && next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write .",
        "prepare": "husky install"
    },
    "dependencies": {
        "next": "15.4.5",
        "next-intl": "^4.3.4",
        "react": "19.1.0",
        "react-dom": "19.1.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.32.0",
        "@tailwindcss/postcss": "^4",
        "@types/node": "^20",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "eslint": "^9.32.0",
        "eslint-config-next": "15.4.5",
        "eslint-plugin-prettier": "^5.5.4",
        "globals": "^16.3.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.1.4",
        "prettier": "^3.6.2",
        "tailwindcss": "^4",
        "typescript": "^5",
        "typescript-eslint": "^8.39.0"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "npm run lint",
            "npm run format"
        ]
    },
    "eslintIgnore": [
        "commitlint.config.js",
        "eslint.config.*",
        "tailwind.config.*",
        "postcss.config.*"
    ]
}
